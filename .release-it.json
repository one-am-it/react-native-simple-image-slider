{
    "git": {
        "commitMessage": "chore: release ${version}",
        "tagName": "v${version}"
    },
    "gitlab": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "‚ú® Features"
                    },
                    {
                        "type": "fix",
                        "section": "üêõ Fixes"
                    },
                    {
                        "type": "docs",
                        "section": "üìù Documentation"
                    },
                    {
                        "type": "style",
                        "section": "üíÖ Style Changes"
                    },
                    {
                        "type": "chore",
                        "section": "üßπ Chores"
                    },
                    {
                        "type": "refactor",
                        "section": "‚ôªÔ∏è Refactors"
                    },
                    {
                        "type": "test",
                        "section": "üß™ Tests"
                    },
                    {
                        "type": "ci",
                        "section": "‚öôÔ∏è CI/CD"
                    }
                ]
            },
            "writerOpts": {
                "groupBy": "type",
                "commitGroupsSort": ["type", "scope"],
                "commitsSort": ["scope", "subject"]
            }
        }
    }
}
