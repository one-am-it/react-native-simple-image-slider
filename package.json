{
    "name": "@one-am/react-native-simple-image-slider",
    "version": "0.16.1",
    "description": "A simple and performant image slider made with FlashList. Includes a full screen gallery component with gesture support.",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/src/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "example": "yarn workspace @one-am/react-native-simple-image-slider-example",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "clean": "del-cli lib",
        "prepare": "bob build",
        "release": "release-it",
        "sync:deps": "node bin/sync-peer-to-dev.js"
    },
    "keywords": [
        "react-native",
        "image-slider",
        "gallery"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/one-am-it/react-native-simple-image-slider.git"
    },
    "author": "one-am <info@oneam.it> (https://github.com/one-am-it)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/one-am-it/react-native-simple-image-slider/issues"
    },
    "homepage": "https://github.com/one-am-it/react-native-simple-image-slider#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "dependencies": {
        "merge-refs": "^1.2.2"
    },
    "peerDependencies": {
        "@shopify/flash-list": ">2.0.0",
        "expo-haptics": "*",
        "expo-image": "*",
        "expo-status-bar": "*",
        "react": "*",
        "react-native": "*",
        "react-native-gesture-handler": "*",
        "react-native-reanimated": "*",
        "react-native-safe-area-context": "*",
        "react-native-svg": "*"
    },
    "devDependencies": {
        "@babel/runtime": "^7.28.4",
        "@commitlint/config-conventional": "^20.2.0",
        "@evilmartians/lefthook": "^2.0.12",
        "@react-native/babel-preset": "^0.83.0",
        "@react-native/eslint-config": "^0.83.0",
        "@release-it/conventional-changelog": "^10.0.4",
        "@shopify/flash-list": "2.0.2",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.2.7",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "commitlint": "^20.2.0",
        "del-cli": "^7.0.0",
        "eslint": "^9.39.1",
        "eslint-config-expo": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "expo-haptics": "~15.0.7",
        "expo-image": "~2.3.0",
        "expo-status-bar": "~3.0.8",
        "expo-system-ui": "~6.0.8",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "react": "19.1.0",
        "react-dom": "19.0.0",
        "react-native": "0.81.5",
        "react-native-builder-bob": "^0.40.15",
        "react-native-gesture-handler": "~2.28.0",
        "react-native-reanimated": "~4.1.1",
        "react-native-safe-area-context": "5.6.2",
        "react-native-svg": "15.12.1",
        "react-native-web": "^0.20.0",
        "release-it": "^17.3.0",
        "typescript": "^5.2.2",
        "typescript-eslint": "^8.46.4",
        "typescript-plugin-styled-components": "^3.0.0"
    },
    "resolutions": {
        "conventional-changelog-conventionalcommits": "8.0.0"
    },
    "workspaces": [
        "example"
    ],
    "packageManager": "yarn@3.6.1",
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            [
                "module",
                {
                    "esm": true
                }
            ],
            [
                "commonjs",
                {
                    "esm": true
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
